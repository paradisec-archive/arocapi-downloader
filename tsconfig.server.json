{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "outDir": "./dist/server",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,

    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/server/**/*", "src/worker/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
