{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      // Tanstack Start
      "!src/routeTree.gen.ts",
      // shadcn/ui components
      "!src/components/ui/",
      // Build output
      "!dist/",
      // Commitlint config
      "!commitlint.config.mjs",
      // Other
      "!.claude/"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 160
  },
  "assist": {
    "enabled": true,
    "actions": { "source": { "organizeImports": "on", "useSortedProperties": "on" } }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "recommended",
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "nursery": {},
      "complexity": {
        // Conflicts with TypeScript's noPropertyAccessFromIndexSignature
        "useLiteralKeys": "off"
      },
      "suspicious": {
        "noImportCycles": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
